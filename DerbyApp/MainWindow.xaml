<Window x:Class="DerbyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DerbyApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="859" Name="MainWindowName" Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Add New Racer" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" Width="170" Height="35" Grid.ColumnSpan="2">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="View All Racers" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" FontSize="20" Width="170" Height="35" Grid.ColumnSpan="2">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" FontSize="20" Width="170" Height="35" Grid.ColumnSpan="2">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" FontSize="20" Width="170" Height="35" Grid.ColumnSpan="2">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" FontSize="20" Width="170" Height="35" Grid.ColumnSpan="2">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="Change Event" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="ButtonChangeDatabase_Click" FontSize="20" Width="170" Height="35" Grid.ColumnSpan="2"/>
        <Button Content="Add New Racer" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Click="ButtonAddRacer_Click" FontSize="20" Width="170" Height="35" Grid.ColumnSpan="2"/>
        <Button Content="View All Racers" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Click="ButtonViewRacerTable_Click" FontSize="20" Width="170" Height="35" Grid.ColumnSpan="2"/>
        <Button Content="Select Race" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Click="ButtonSelectRace_Click" FontSize="20" Width="170" Height="35" Grid.ColumnSpan="2"/>
        <Button Content="Start Race" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" FontSize="20" Width="170" Height="35" Grid.ColumnSpan="2" Click="ButtonStartRace_Click"/>
        <ComboBox HorizontalAlignment="Left" Margin="190,160,0,0" VerticalAlignment="Top" Width="200" Height="35">
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="190,210,0,0" VerticalAlignment="Top" Width="200" Height="35">
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="190,160,0,0" VerticalAlignment="Top" Width="200" Height="35"/>
        <ComboBox ItemsSource="{Binding ElementName=MainWindowName, Path=RaceList}" SelectedValue="{Binding ElementName=MainWindowName, Path=CurrentRace, Mode=TwoWay}" HorizontalAlignment="Left" Margin="190,210,0,0" VerticalAlignment="Top" Width="200" Height="35" FontSize="20"/>
        <ScrollViewer Grid.Column="1" CanContentScroll="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Frame Name="mainFrame" NavigationUIVisibility="Hidden" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="0,0,0,0"/>
        </ScrollViewer>
    </Grid>
</Window>

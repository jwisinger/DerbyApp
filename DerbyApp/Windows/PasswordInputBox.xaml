<Window x:Class="DerbyApp.Windows.PasswordInputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="150" Width="300">
    <StackPanel Margin="10">
        <Label>Password:</Label>
        <!-- The PasswordBox control -->
        <PasswordBox Name="passwordBox" MaxLength="20" PasswordChar="*" />
        <Button Content="OK" Margin="0,10,0,0" IsDefault="True" Click="LoginButton_Click" />
    </StackPanel>
</Window>

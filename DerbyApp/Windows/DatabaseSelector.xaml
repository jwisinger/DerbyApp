<Window x:Class="DerbyApp.Windows.DatabaseSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DerbyApp.Windows"
        mc:Ignorable="d"
        Title="Select Race Database" Height="404" Width="654">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="3">
            <TabControl>
                <TabItem Header="Local File">
                    <Grid Background="#FFE5E5E5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBox Margin="10,10,10,10" TextWrapping="Wrap" Text="Choosing a &quot;Local File&quot; database will store everything on this computer. It is the simpler method, but only allows one computer at a time to be connected to the race network." FontSize="24" >
                                <TextBox.BorderBrush>
                                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuTextColorKey}}"/>
                                </TextBox.BorderBrush>
                            </TextBox>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Button Content="Select Event File..." HorizontalAlignment="Center" Width="200" Margin="0,0,0,10" FontSize="16" Click="ButtonBrowse_Click"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Remote">
                    <Grid Background="#FFE5E5E5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" Margin="10,10,10,10" TextWrapping="Wrap" Text="Choosing a &quot;Remote&quot; database will allow multiple computers to connect to the race network. It does require a database server." FontSize="16" >
                                    <TextBox.BorderBrush>
                                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuTextColorKey}}"/>
                                    </TextBox.BorderBrush>
                                </TextBox>
                                <Label Grid.Column="1" Grid.Row="0" Content="Host: " HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                <Label Grid.Column="1" Grid.Row="1" Content="Username: " HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                <Label Grid.Column="1" Grid.Row="2" Content="Password: " HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="2" HorizontalAlignment="Stretch" Height="30" Grid.Row="0" Name="serverTextBox" Text="{Binding Host, Mode=TwoWay}"/>
                                <TextBox Grid.Column="2" HorizontalAlignment="Stretch" Height="30" Grid.Row="1" Name="usernameTextBox" Text="{Binding Username, Mode=TwoWay}"/>
                                <PasswordBox Grid.Column="2" HorizontalAlignment="Stretch" Height="30" Grid.Row="2" PasswordChanged="PasswordBox_PasswordChanged"/>
                                <Button Grid.Column="2" Grid.Row="3" Content="Connect to Database" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10,-1,10,0" Margin="0,5,0,5" Click="ButtonConnect_Click"/>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Button Grid.Column="1" Content="Add New Event..." HorizontalAlignment="Center" Width="200" Margin="0,0,0,10" FontSize="16" Click="ButtonAddRemote_Click"/>
                        </Grid>
                        <ListBox Grid.Row="1" Name="eventListbox" ItemsSource="{Binding Path=., Mode=TwoWay}" MouseDoubleClick="EventListbox_MouseDoubleClick"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid Grid.Row="1" >
            <Button Content="Cancel" HorizontalAlignment="Right" Width="100" Margin="0,5,5,5" FontSize="16" Click="ButtonCancel_Click"/>
        </Grid>
    </Grid>
</Window>
